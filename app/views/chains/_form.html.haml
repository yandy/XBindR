= form_for @chain do |f|
  - if @chain.errors.any?
    #error_explanation
      %h2= "#{pluralize(@chain.errors.count, "error")} prohibited this chain from being saved:"
      %ul
        - @chain.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :id
    = f.text_field :id
  .actions
    = f.submit 'Save'
